{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/styles.css">
{% endblock %}

{% block body %}
<h1 class="text-center mt-5">Bienvenue sur la page d'accueil du test Print'O'Clock</h1>
<h5 class="text-center mb-5">de Sanita Rattanasamay</h5>
<p class="text-center">Inscrivez-vous à la newsletter pour commencer l'exercice ;)</p>

	<div id="subscribeForm" class="bg-light">
		{{form_start(form)}}
			<div class="form-group">
				{{form_row(form.firstname, {
					'label' : "Prénom : ",
					'label_attr': {
						'class': "form-label mt-4"
					},
					'attr':{
						'placeholder': "Votre prénom",
						'class': "form-control"
					}
				})}}
			</div>
			<div class="form-group">
				{{form_row(form.email, {
					'label' : "Email : ",
					'label_attr': {
						'class': "form-label mt-4"
					},
					'attr':{
						'placeholder': "Votre adresse email",
						'class': "form-control"
					}
				})}}
			</div>
			<fieldset class="form-group d-flex mt-4">
				{{form_label(form.categories)}}
				{% for checkbox in form.categories.children %}
    	    		<div class="form-check">
    	        		{{ form_widget(checkbox) }}
    	        		{{ form_label(checkbox) }}
    	    		</div>
    			{% endfor %}	
			</fieldset>
			<div class="form-group" id="rgpd">
				{{form_row(form.rgpd, {
					'label' : "Veuillez accepter la collecte des données personnelles  ",
					'label_attr': {
						'class': "form-label mt-4 mx-2"
					},
				})}}
			</div>
		<button type="submit" class="btn btn-success">S'inscrire</button>
		{{form_end(form)}}
	</div>

{% endblock %}